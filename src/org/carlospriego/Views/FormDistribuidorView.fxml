   <children>
      <ImageView fitHeight="600.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/FormDistribuidores.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfDistribuidorId" editable="false" layoutX="39.0" layoutY="145.0" prefHeight="30.0" prefWidth="311.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
      <TextField fx:id="tfNombreDistribuidor" layoutX="39.0" layoutY="205.0" prefHeight="30.0" prefWidth="311.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
