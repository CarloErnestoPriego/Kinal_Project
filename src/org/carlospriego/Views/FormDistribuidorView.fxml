      </GridPane>
      <TextField fx:id="tfNitDistribuidor" layoutX="39.0" layoutY="330.0" prefHeight="30.0" prefWidth="311.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
      <TextField fx:id="tfTelefonoDistribuidor" layoutX="39.0" layoutY="391.0" prefHeight="30.0" prefWidth="311.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
      <TextField fx:id="tfWeb" layoutX="39.0" layoutY="448.0" prefHeight="30.0" prefWidth="311.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
