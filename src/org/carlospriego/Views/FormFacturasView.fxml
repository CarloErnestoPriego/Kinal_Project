<AnchorPane id="AnchorPane" prefHeight="600.0" prefWidth="400.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="org.carlospriego.Controllers.FormFacturasController">
   <children>
      <ImageView fitHeight="600.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../Images/FormFacturas.png" />
         </image>
      </ImageView>
      <TextField fx:id="tfFacturaId" editable="false" layoutX="37.0" layoutY="115.0" prefHeight="25.0" prefWidth="327.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
      <GridPane layoutX="89.0" layoutY="281.0" prefHeight="62.0" prefWidth="223.0">
         <columnConstraints>
            <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="45.0" prefWidth="100.0" style="-fx-background-radius: 10;" text="Guardar" GridPane.valignment="CENTER" />
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#handleButtonAction" prefHeight="45.0" prefWidth="100.0" style="-fx-background-radius: 10;" text="Cancelar" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER" />
         </children>
      </GridPane>
      <ComboBox fx:id="cmbClientes" layoutX="37.0" layoutY="178.0" prefHeight="25.0" prefWidth="327.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
      <ComboBox fx:id="cmbEmpleados" layoutX="37.0" layoutY="239.0" prefHeight="25.0" prefWidth="327.0" style="-fx-background-radius: 10; -fx-background-color: #f3dbc3;" />
   </children>
</AnchorPane>
